<Window x:Class="RssVisualizerScreensaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSS Visualizer" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True"
        Loaded="Window_Loaded" KeyDown="Window_KeyDown" MouseMove="Window_MouseMove" MouseDown="Window_MouseDown" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#0b3d91" Offset="0"/>
                <GradientStop Color="#0a2a6b" Offset="0.5"/>
                <GradientStop Color="#061a44" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <wv2:WebView2 x:Name="Web" />
    </Grid>
</Window>